<form name="container-form" action="/courses/handle-form-actions" method="POST">
  <a href="/me/stored/courses">Quay lại</a>
  <h1>Deleted Courses</h1>
    <div class=" d-flex align-items-center">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
          <label class="form-check-label" for="checkbox-all">
            Chọn Tất cả
          </label>
        </div>
        <select class="form-control form-control-sm " style="width:160px ; margin: 0 16px" name="action" required>
          <option value="">---Chọn hành động</option>
          <option value="forceDelete">Xoá </option>
          <option value="restore">Khôi Phục</option>
        </select>
        <button class="btn btn-primary btn-sm btn-checkAllSubmit" disabled>Thực Hiện</button>
    </div>
  <table class="table mt-4 table-hover table-light">
  <thead>
    <tr>
        <th scope='col'></th>
        <th scope='col' colspan='2'>
          ID
          {{{sortAble '_id' _sort}}}
        </th>
        <th scope='col' >
          Course
          {{{sortAble 'name' _sort}}}
        </th>
        <th scope='col'>
          Level
          {{{sortAble 'level' _sort}}}
        </th>
        <th scope='col'>
          Create At
          {{{sortAble 'deletedAt' _sort}}}
        </th>
        <th scope='col'></th>
      </tr>
  </thead>
  <tbody>
      {{#each course}}
        <tr>
          <td>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="{{this._id}}" name="courseIds">
              </div>
            </td>
          <td>{{this._id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.level}}</td>
          <td>{{this.deletedAt}}</td>
          <td>
            <a
              data-id="{{this._id}}"
              class='btn btn-outline-info py-1 btn-restored'
            >Khôi Phục</a>
            <a
              {{! href='#' }}
              class='btn btn-outline-danger mt-1 py-1'
              data-toggle='modal'
              data-target='#exampleModal'
              data-id='{{this._id}}'
            >Xoá Vĩnh Viễn</a>
          </td>
        </tr>
        {{else}}
        <tr>
          <td colspan="5" class="text-center">
            Thùng rác trống.
            <a href="/">Home</a>
          </td>
        </tr>  
      {{/each}}
    </tbody>
</table>
</form> 
