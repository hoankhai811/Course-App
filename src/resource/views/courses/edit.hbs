<div class='mt-4'>
  <h3>Edit Course</h3>
  <form method='POST' action='/courses/{{course._id}}?_method=PUT'>
    <div class='form-group'>
      <label for='name'>Name</label>
      <input
        class='form-control'
        placeholder='Enter Name'
        id='name'
        name='name'
        value='{{course.name}}'
      />
    </div>
    <div class='form-group'>
      <label for='description'>Description</label>
      <textarea
        class='form-control'
        placeholder='Enter Description'
        id='description'
        name='description'
      >{{course.description}}</textarea>
    </div>
    <div class='form-group'>
      <label for='videoId'>VideoId</label>
      <input
        class='form-control'
        placeholder='Enter VideoId'
        id='videoId'
        name='videoId'
        value='{{course.videoId}}'
      />
    </div>
    <div class='form-group'>
      <label for='level'>Level</label>
      <input
        class='form-control'
        placeholder='Enter Level'
        id='level'
        name='level'
        value='{{course.level}}'
      />
    </div>
    <div class='form-group'>
      <label for='imageHome'>Image Home</label>
      <input
        class='form-control'
        placeholder='Enter ImageHome'
        id='imageHome'
        name='imageHome'
        value='{{course.image}}'
      />
    </div>
    <button type='submit' class='btn btn-primary'>Save!</button>
  </form>
</div>